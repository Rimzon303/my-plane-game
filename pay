    <div class="card">
        <div class="star-icon">‚≠êÔ∏è</div>
        <h2>–ü–æ–∫—É–ø–∫–∞ –ó–≤–µ–∑–¥</h2>
        <p>–ü–æ–¥–¥–µ—Ä–∂–∏—Ç–µ –ø—Ä–æ–µ–∫—Ç, –∫—É–ø–∏–≤ –ø–∞–∫–µ—Ç –∏–∑ 50 –∑–≤–µ–∑–¥.</p>
        <button id="buyBtn">–ö—É–ø–∏—Ç—å –∑–∞ 50 ‚≠êÔ∏è</button>
        <div id="status" class="status"></div>
    </div>

    <script>
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Telegram WebApp
        const tg = window.Telegram.WebApp;
        tg.expand(); // –†–∞–∑–≤–µ—Ä–Ω—É—Ç—å –Ω–∞ –≤–µ—Å—å —ç–∫—Ä–∞–Ω

        const buyBtn = document.getElementById('buyBtn');
        const statusDiv = document.getElementById('status');

        buyBtn.addEventListener('click', () => {
            // –í–ê–ñ–ù–û: –°—Å—ã–ª–∫–∞ (invoice_url) –¥–æ–ª–∂–Ω–∞ –≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞—Ç—å—Å—è –Ω–∞ –≤–∞—à–µ–º —Å–µ—Ä–≤–µ—Ä–µ 
            // —á–µ—Ä–µ–∑ –º–µ—Ç–æ–¥ Bot API createInvoiceLink. 
            // –ó–¥–µ—Å—å –ø—Ä–∏–≤–µ–¥–µ–Ω –ø—Ä–∏–º–µ—Ä –≤—ã–∑–æ–≤–∞ —Ñ—É–Ω–∫—Ü–∏–∏.
            
            const invoiceUrl = "–°–°–´–õ–ö–ê_–ò–ó_CREATE_INVOICE_LINK"; 

            if (invoiceUrl === "–°–°–´–õ–ö–ê_–ò–ó_CREATE_INVOICE_LINK") {
                statusDiv.innerText = "–û—à–∏–±–∫–∞: –ù–µ –Ω–∞—Å—Ç—Ä–æ–µ–Ω–∞ —Å—Å—ã–ª–∫–∞ –Ω–∞ –æ–ø–ª–∞—Ç—É!";
                statusDiv.style.color = "red";
                return;
            }
       // –û—Ç–∫—Ä—ã—Ç–∏–µ –æ–∫–Ω–∞ –æ–ø–ª–∞—Ç—ã –≤–Ω—É—Ç—Ä–∏ Telegram
            tg.openInvoice(invoiceUrl, (status) => {
                if (status === 'paid') {
                    statusDiv.innerText = "–û–ø–ª–∞—Ç–∞ —É—Å–ø–µ—à–Ω–æ –∑–∞–≤–µ—Ä—à–µ–Ω–∞! üéâ";
                    statusDiv.style.color = "green";
                    buyBtn.style.display = "none";
                } else if (status === 'cancelled') {
                    statusDiv.innerText = "–û–ø–ª–∞—Ç–∞ –æ—Ç–º–µ–Ω–µ–Ω–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–º.";
                    statusDiv.style.color = "orange";
                } else if (status === 'failed') {
                    statusDiv.innerText = "–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ –æ–ø–ª–∞—Ç–µ.";
                    statusDiv.style.color = "red";
                }
            });
        });
    </script>
